<%- include('partials/header') %>
<div class="container mt-5">
  <h2>Receive Money</h2>
  <% if (error) { %>
  <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <div class="card">
    <div class="card-body">
      <% if (paymentUrl) { %>
      <div class="alert alert-success">
        Payment initialized!
        <a href="<%= paymentUrl %>" target="_blank"
          >Click here to complete payment</a
        >
      </div>
      <% } %>
      <form method="POST" action="/payment/initialize-payment">
        <div class="mb-3">
          <label for="amount" class="form-label">Amount (NGN)</label>
          <input
            type="number"
            step="0.01"
            class="form-control"
            id="amount"
            name="amount"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">
          Generate Payment Link
        </button>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
