<%- include('partials/header') %>
<div class="container mt-5">
  <h2>Fund Your Wallet</h2>

  <% if (error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %> <% if (success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %> <% if (paymentUrl) { %>
    <p>
      Please
      <a href="<%= paymentUrl %>" target="_blank" class="alert-link"
        >click here</a
      >
      to complete your payment.
    </p>
    <% } %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>

  <div class="card">
    <div class="card-body">
      <form method="POST" action="/payment/initialize-funding">
        <div class="mb-3">
          <label for="amount" class="form-label">Amount (NGN)</label>
          <input
            type="number"
            step="0.01"
            class="form-control"
            id="amount"
            name="amount"
            min="100"
            required
          />
          <div class="form-text">Minimum funding amount is â‚¦100</div>
        </div>
        <button type="submit" class="btn btn-primary">Fund Wallet</button>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
